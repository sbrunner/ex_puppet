NameVirtualHost <%= @vhost_name %>:<%= @port %>
<VirtualHost <%= @vhost_name %>:<%= @port %>>
  ServerName <%= @servername %>
  DocumentRoot <%= @docroot %>
  <Directory <%= @docroot %>>
    Options <%= @options %>
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog <%= @logdir %>/<%= @name %>_error.log
  LogLevel warn
  CustomLog <%= @logdir %>/<%= @name %>_access.log combined
  ServerSignature Off
</VirtualHost>
